<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/user_recycler_item_LL"
    android:layout_width="match_parent"
    android:background="@drawable/corner_round_image"
    android:elevation="1dp"
    android:layout_marginTop="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"

            android:text="Aditya kumar"
            android:textColor="#000"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginEnd="12dp"
                android:id="@+id/add_commission"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_background"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:text="ADD commisssion"
                android:textColor="#FFF"
                >

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>




    </LinearLayout>

    <TextView
        android:id="@+id/user_store_address"
        android:paddingStart="12dp"
        android:paddingEnd="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="details_of the store addresss of the store details_of the store addresss of the store details_of the store addresss of the store details_of the store addresss of the store"
        android:textColor="#292929"
        android:layout_marginBottom="12dp"
        />



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/commission_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Commission"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/extra_commison_et"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#E3E3E3"
            android:layout_marginHorizontal="8dp"
            android:hint="in â‚¹"
            android:paddingStart="20dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:textColorHint="#696969"
            android:inputType="number"
            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Details"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/user_details"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#E3E3E3"
            android:layout_marginHorizontal="8dp"
            android:hint="Details"
            android:paddingStart="20dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:textColorHint="#696969"
            android:inputType="textMultiLine"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/send_commission"
            android:layout_marginStart="20dp"
            android:background="@drawable/green_background_color"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Send commisssion"
            android:textColor="#FFF"
            >

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>








</LinearLayout>