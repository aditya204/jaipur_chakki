<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/address_recycler_item_LL"
    android:layout_width="match_parent"
    android:background="@drawable/corner_round_image"
    android:elevation="5dp"
    android:alpha="0.8"
    android:layout_marginTop="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >
        <TextView
            android:id="@+id/address_recycler_name"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aditya kumar"
            android:textSize="20dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/address_recycler_address_type"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:layout_marginStart="8dp"
            android:background="#D8D6D6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:textSize="11dp"
            android:textColor="#444444"
            />



    </LinearLayout>

    <TextView
        android:id="@+id/address_recycler_address_details"
        android:paddingStart="12dp"
        android:paddingEnd="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aditya kumar Adity kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumarAditya kumar"
        android:textColor="#292929"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        >
        <TextView
            android:layout_weight="1"
            android:id="@+id/address_recycler_phone_no"
            android:layout_marginTop="6dp"
            android:paddingStart="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9546796020"
            android:textColor="#292929"
            />

        <ImageButton
            android:id="@+id/address_recycler_edit_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="#fff"
            android:src="@drawable/ic_edit_black_24dp"
            android:tint="#464545"
            />

        <ImageButton
            android:id="@+id/address_recycler_delete_btn"

            android:padding="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"

            android:src="@drawable/ic_delete_black_24dp"
            android:tint="#464545"
            />







    </LinearLayout>




</LinearLayout>