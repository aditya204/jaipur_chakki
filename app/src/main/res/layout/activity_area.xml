<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Area">

    <LinearLayout
        android:id="@+id/llareatxt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/add_area_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Area"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#DF4444"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_baseline_add_24"
            android:drawableTint="#DF4444"
            android:drawablePadding="12dp"
            android:paddingStart="20dp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_area_ll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/add_area_et"
            android:hint="Enter Name"
            android:textColor="@color/gray_25"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingStart="20dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_area_btn"

            android:layout_marginEnd="12dp"
            android:layout_weight="3.5"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Add"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/area_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        />
</LinearLayout>